@model EFDataApp.Models.Student
@{
    ViewBag.Title = "Stergerea studentului";
}

<div>
    <dl class="dl-horizontal">
        <dt>Prenume</dt>
        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt>Nume</dt>
        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

    </dl>

    <div>
        <form asp-controller="Curss" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Sterge" />
            </div>
        </form>
    </div>
</div>